FROM ubuntu:22.04

RUN apt-get update && apt-get install -y curl git build-essential unzip

RUN curl -fsSL https://bun.sh/install | bash && \
    echo 'export PATH="/root/.bun/bin:$PATH"' >> /etc/environment

WORKDIR /app
COPY . .

RUN /root/.bun/bin/bun install

SHELL ["/bin/bash", "-c"]
CMD ["bun", "run", "prod"]
